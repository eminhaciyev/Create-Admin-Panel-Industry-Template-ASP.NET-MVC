
@{
    ViewBag.Title = "AdminContact";
    Layout = "~/Areas/Area/Views/Shared/_Layout.cshtml";
}

<h2 class="mx-5">Contact Form</h2>
<div class="container">
    <div class="row">
        @using (@Html.BeginForm("AdminContact", "Admin", FormMethod.Post))
        {

            <div class="form-group my-3">
                <label for="Name" >Name</label>
                <input type="text" class="form-control " name="name" id="Name" aria-describedby="nameHelp" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="Email">Email address</label>
                <input type="email" class="form-control" name="email" id="Email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" name="subject" id="subject" placeholder="Enter Subject">
            </div>

            <div class="form-group">
                <label for="messages">Messages</label>
                <textarea class="form-control" rows="5" cols="5" id="messages"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>


}
        </div>
    </div>


